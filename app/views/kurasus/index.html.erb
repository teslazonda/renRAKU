<div class="container mt-3 text-center text-white">
<h1>Select a student to view notebook</h1>
  <%= link_to 'Return to Dashboard', dashboards_path, class: "btn btn-primary mb-3" %>
</div>
<div class="container">
<% @user.kurasus.each do |kurasu| %>
<div class="cards mt-5">
  <div class="card mt-4" id="class-card">
    <div class="card-body">
        <p class="card-text stretched-link"><%= kurasu.name %></p>
    </div>
  </div>
     <% kurasu.students.sort_by { |student| student.last_name}.each do |student| %>
  <div class="card mt-4">
    <div class="card-body">
        <p class="card-text stretched-link"><%= kurasu.name %> <%= student.first_name%> <%= student.last_name%></p>
        <a href="/students/<%=student.id%>/messages" class="stretched-link"></a>
    </div>
  </div>
    <% end %>
    </div>
  <% end %>

</div>
